<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetTested">

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="718dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageToLabel"
            android:layout_width="match_parent"
            android:layout_height="296dp" />

        <Button
            android:id="@+id/btnTest"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:backgroundTint="#FCB9B8"
            android:onClick="onUploadChequeButton"
            android:text="Select Image of Affected Area" />

        <TextView
            android:id="@+id/txtOutput"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:ems="10"
            android:gravity="start|top"
            android:textAlignment="center"
            android:textColor="#4C4A4A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/upload"
            android:layout_width="237dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:backgroundTint="#FCB9B8"
            android:text="Save Results" />

        <Button
            android:id="@+id/logout"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FCB9B8"
            android:onClick="logout"
            android:text="Logout" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>